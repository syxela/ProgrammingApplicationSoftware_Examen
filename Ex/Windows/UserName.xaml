<Window x:Class="Ex.Windows.UserName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex.Windows"
        mc:Ignorable="d"
        Title="UserName" Height="359" Width="650">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Windows/banner.jpg" Stretch="Fill"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Enter your name:" Foreground="White"/>
            <TextBox x:Name="txtUserName"/>
            <Button x:Name="btnSubmit" Content="Submit" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
